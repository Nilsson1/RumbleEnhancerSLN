@model RumbleEnhancerWebSite.Models.ProfileModel

@{
    ViewData["Title"] = "SignUp";
}

<h1 class="text-center">Sign up</h1>

<hr />

<div class="text-center" style="width:400px; margin:0 auto;">
    <div class="text-center">
        <form asp-action="SignUp">
            <div class="modal-body">
                <div class="row">
                    <div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="ProfileEmail" class="form-control" required placeholder="Email" />
                            <span asp-validation-for="ProfileEmail" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input asp-for="ProfileName" class="form-control" required placeholder="Rumble-name" />
                            <span asp-validation-for="ProfileName" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input asp-for="ProfilePassword" class="form-control" type="password" placeholder="Password" required />
                            <span asp-validation-for="ProfilePassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Signup" class="btn btn-primary" style="margin:0 auto; width:100%;"/>
            </div>
        </form>
        Already a member? <a asp-area="" asp-controller="Home" asp-action="LogIn">Login</a>
    </div>
</div>

<!-- Button trigger modal
<button type="button" class="btn btn-primary">
    Login
</button> -->

<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="LogIn">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ProfileName" class="control-label"></label>
                                <input asp-for="ProfileName" class="form-control" required />
                                <span asp-validation-for="ProfileName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProfilePassword" class="control-label"></label>
                                <input asp-for="ProfilePassword" class="form-control" required />
                                <span asp-validation-for="ProfilePassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
